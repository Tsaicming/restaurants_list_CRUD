<!-- 輸入列表 -->
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <h1 class="mb-1 restaurant-show-title">修正內容</h1>
      <form action="/restaurants/{{ restaurant._id}}?_method=PUT" method="POST">
        <div class="container">
          <div class="row">
            <div class="col-12 col-md-10 mx-auto">

              <p class="mb-1">
                <span class="text-secondary">
                  <i class="fas fa-utensils pr-2"></i>
                  中文名稱：
                </span>
                <input type="text" placeholder="chinese name" name="name" value="{{ restaurant.name}}" required>
              </p>

              <p class="mb-1">
                <span class="text-secondary">
                  <i class="fas fa-utensils pr-2"></i>
                  英文名稱：
                </span>
                <input type="text" placeholder="english name" name="name_en" value="{{ restaurant.name_en}}" required>
              </p>

              <p class="mb-1">
                <span class="text-secondary">
                  <i class="fas fa-utensils pr-2"></i>
                  類別：
                </span>
                <input type="text" placeholder="type" name="category" value="{{ restaurant.category}}">
              </p>

              <p class="mb-1">
                <span class="text-secondary">
                  <i class="fas fa-map-marker-alt pr-2"></i>
                  地址：
                </span>
                <input type="text" placeholder="address" name="location" value="{{ restaurant.location}}">
              </p>

              <p class="mb-1">
                <span class="text-secondary">
                  <i class="fas fa-location-arrow pr-2 fa-xs"></i>
                  Google Map：
                </span>
                <input type="text" placeholder="URL" name="google_map" value="{{ restaurant.google_map}}">
              </p>

              <p class="mb-1">
                <span class="text-secondary">
                  <i class="fas fa-mobile-alt pr-2"></i>
                  電話：
                </span>
                <input type="text" placeholder="phone number" name="phone" value="{{ restaurant.phone}}">
              </p>

              <p class="mb-1">
                <span class="text-secondary">
                  <i class="fas fa-pen pr-2"></i>
                  簡述：
                </span>
                {{!-- 可用多行輸入框取代 <input>
                <textarea name="" id="" cols="30" rows="10">{{ restaurant.description}}</textarea> --}}
                <input type="text" placeholder="text" name="description" value="{{ restaurant.description}}">
              </p>

              <p class="mb-1">
                <span class="text-secondary">
                  <i class="fas fa-star pr-2"></i>
                  評分：
                </span>
                <input type="number" max="5.0" min="1.0" step="0.1" placeholder="score" name="rating"
                  value="{{ restaurant.rating}}" required>
              </p>

              <p class="mb-1">
                <span class="text-secondary">
                  <i class="fas fa-utensils pr-2"></i>
                  照片：
                </span>
                <input type="text" placeholder="URL" name="image" value="{{ restaurant.image}}">
              </p>

              <button type="submit" class="btn btn-primary">確認修改</button>
            </div>
          </div>
        </div>
      </form>

    </div>
  </div>
</div>